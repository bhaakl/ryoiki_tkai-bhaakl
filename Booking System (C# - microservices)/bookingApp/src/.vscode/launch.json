            "program": "${workspaceFolder}/WebApp/bin/Debug/net8.0/BookingApp.WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WebApp/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
