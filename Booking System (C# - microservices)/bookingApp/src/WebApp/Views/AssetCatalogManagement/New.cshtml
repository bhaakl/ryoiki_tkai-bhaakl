@model BookingApp.WebApp.ViewModels.AssetCatalogNewViewModel
@{
    ViewData["Title"] = "Register Asset";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Catalog Service - register asset</h3>

<form asp-controller="AssetCatalogManagement" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Asset.Name"></label>
        <input asp-for="Asset.Name" type="text" class="form-control" />
        <span asp-validation-for="Asset.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Asset.Type"></label>
        <input asp-for="Asset.Type" type="text" class="form-control" />
        <span asp-validation-for="Asset.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Asset.Description"></label>
        <input asp-for="Asset.Description" type="text" class="form-control" />
        <span asp-validation-for="Asset.Description" class="text-danger"></span>
    </div>
    <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="AssetCatalogManagement" class="btn btn-default">Cancel</a></span>
</form>


